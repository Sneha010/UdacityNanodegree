<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:layout_margin="2.5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/iv_TrailerIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/red_video_icon"
        android:contentDescription="@string/app_name_proj2"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        />
    <com.udacity.myappportfolio.util.TextViewGothamBook
        android:id="@+id/tv_SynopsisValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bxhjascdvskab ckcajnlkjhavsdyauffff"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/secondaryTextColor"
       android:layout_toRightOf="@id/iv_TrailerIcon"
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>
